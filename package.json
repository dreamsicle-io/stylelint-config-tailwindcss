{
	"name": "@dreamsicle.io/stylelint-config-tailwindcss",
	"version": "1.0.6",
	"description": "A stylelint configuration for Tailwind CSS projects.",
	"main": "index.mjs",
	"files": [
		"package.json",
		"index.mjs",
		"dist",
		"README.md",
		"LICENSE"
	],
	"homepage": "https://github.com/dreamsicle-io/stylelint-config-tailwindcss",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dreamsicle-io/stylelint-config-tailwindcss.git"
	},
	"bugs": {
		"url": "https://github.com/dreamsicle-io/stylelint-config-tailwindcss/issues"
	},
	"keywords": [
		"tailwind",
		"tailwindcss",
		"stylelint",
		"stylelint-config"
	],
	"author": "Dreamsicle",
	"license": "MIT",
	"scripts": {
		"build": "node scripts/build.mjs",
		"test": "stylelint -f verbose \"tests/**/*.css\"",
		"fix": "npm test -- --fix",
		"clean-dist": "rm -rf dist",
		"clean-deps": "rm -rf node_modules package-lock.json",
		"clean": "npm run clean-dist; npm run clean-deps"
	},
	"peerDependencies": {
		"stylelint": "^16.25.0"
	},
	"devDependencies": {
		"chalk": "5.6.2",
		"css-tree": "^3.1.0",
		"stylelint": "^16.25.0",
		"stylelint-config-standard": "^39.0.1"
	}
}
